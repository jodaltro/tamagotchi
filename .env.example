# Firestore Configuration
# Set to 'true' to enable Firestore persistence, 'false' to use in-memory storage
USE_FIRESTORE=false

# Advanced Memory System (NEW)
# Set to 'true' to enable advanced hierarchical memory with commitment tracking
# Set to 'false' to use legacy MemoryStore (for backward compatibility)
USE_ENHANCED_MEMORY=true

# Google Cloud credentials path (required if USE_FIRESTORE=true or using Vision API)
# Path to your Google Cloud service account JSON key file
# GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json

# Google Generative AI API Key (for Gemini language generation)
# Get your API key from: https://makersuite.google.com/app/apikey
# GOOGLE_API_KEY=your-api-key-here
# Alternative name for the same API key
# GENAI_API_KEY=your-api-key-here

# Application Configuration
PYTHONUNBUFFERED=1
PORT=8080
